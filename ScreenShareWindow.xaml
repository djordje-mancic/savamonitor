<Window x:Class="SavaMonitor.ScreenShareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SavaMonitor"
        mc:Ignorable="d"
        Title="Screen share from teacher" Height="720" Width="1280" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" Topmost="True" ShowInTaskbar="False" Cursor="Arrow" Loaded="Window_Loaded">
    <Grid Background="#FF254E6D">
        <Image x:Name="ScreenShareImage" Panel.ZIndex="2" Source="{Binding LatestScreenShot}"/>
        <TextBlock x:Name="SharingSoonLabel" Text="Screen sharing will start soon!" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="48px" FontWeight="Medium"/>
    </Grid>
</Window>
