<Window x:Class="SavaMonitor.TeacherPrompts.SendMessagePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SavaMonitor.TeacherPrompts"
        mc:Ignorable="d"
        Title="Send message" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Margin="32, 24, 32, 0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" FontWeight="SemiBold" Text="Write a message you would like to send"/>
        <TextBox x:Name="MessageTextBox" Margin="32, 68, 32, 78" AcceptsReturn="True" TextWrapping="Wrap"/>
        <Separator Height="10" VerticalAlignment="Bottom" Margin="32, 0, 32, 58"/>
        <Button x:Name="SendButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="96px" Height="32px" Margin="0, 0, 32, 16" Content="Send" IsDefault="True" Click="SendButton_Click"/>
        <Button x:Name="CancelButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="96px" Height="32px" Margin="0, 0, 144, 16" Content="Cancel" IsCancel="True" Click="CancelButton_Click"/>
    </Grid>
</Window>
