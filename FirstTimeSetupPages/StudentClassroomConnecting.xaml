<Page x:Class="SavaMonitor.FirstTimeSetupPages.StudentClassroomConnecting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SavaMonitor.FirstTimeSetupPages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="600"
      Title="StudentClassroomConnecting"
      Loaded="Page_Loaded">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="TitleText"  Text="Joining classroom ID 485" TextAlignment="Center" FontSize="24" FontWeight="SemiBold" Margin="32, 0, 32, 8"/>
            <ProgressBar x:Name="VisualProgressBar"  Height="32" Margin="32, 0, 32, 0" IsIndeterminate="True" Value="-2"/>
            <TextBlock x:Name="DescriptionText" Margin="32, 8, 32, 0" Text="Connecting..." TextAlignment="Center" TextWrapping="Wrap"/>
            <Button x:Name="BackButton" Content="Back" Margin="0, 8, 0, 0" HorizontalAlignment="Center" Padding="32, 8" Click="BackButton_Click" Visibility="Collapsed"/>
            <Button x:Name="FinishButton" Content="Finish" Margin="0, 8, 0, 0" HorizontalAlignment="Center" Padding="32, 8" Click="FinishButton_Click" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>
