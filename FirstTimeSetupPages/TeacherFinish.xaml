<Page x:Class="SavaMonitor.FirstTimeSetupPages.TeacherFinish"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SavaMonitor.FirstTimeSetupPages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="600"
      Title="TeacherFinish" Loaded="Page_Loaded">

    <Grid>
        <Label x:Name="TitleLabel" Content="Finishing setup..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="16, 16, 0, 0" FontSize="24" FontWeight="Medium"/>
        <Label x:Name="DescriptionLabel" Content="Please wait until the process finishes." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="16, 52, 0, 0" FontSize="12"/>

        <ListBox x:Name="ProgressListBox" Margin="16, 80, 16, 100">
            
        </ListBox>

        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Stretch" Margin="16,0,16,72" VerticalAlignment="Bottom" Height="18"/>
        <Separator Height="10" VerticalAlignment="Bottom" Margin="16, 0, 16, 58"/>
        <Button x:Name="FinishButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="96px" Height="32px" Margin="0, 0, 16, 16" Content="Finish" Click="FinishButton_Click" IsEnabled="False" IsDefault="True"/>
    </Grid>
</Page>
